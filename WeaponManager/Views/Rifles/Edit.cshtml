@using WeaponManager.Data.Enums

@model WeaponManager.Models.Rifle

@{
    ViewBag.Title = "Upravit";
}

<h2>Upravit</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MuzzleVelocity" class="control-label">@Html.DisplayNameFor(_ => Model.MuzzleVelocity) (m/s)</label>
                <input asp-for="MuzzleVelocity" class="form-control" />
                <span asp-validation-for="MuzzleVelocity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MagazineCapacity" class="control-label"></label>
                <input asp-for="MagazineCapacity" class="form-control" />
                <span asp-validation-for="MagazineCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Caliber" class="control-label">@Html.DisplayNameFor(_ => Model.Caliber) (mm)</label>
                <input asp-for="Caliber" class="form-control" />
                <span asp-validation-for="Caliber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RifleType" class="control-label"></label>
                <select asp-for="RifleType" asp-items="Html.GetEnumSelectList<RifleType>()">
                    <option selected="selected" value="">Vyberte</option>
                </select>
                <span asp-validation-for="RifleType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RifleLength" class="control-label">@Html.DisplayNameFor(_ => Model.RifleLength) (cm)</label>
                <input asp-for="RifleLength" class="form-control" />
                <span asp-validation-for="RifleLength" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">@Html.DisplayNameFor(_ => Model.Price) (Kč)</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Uložit" class="btn btn-dark" /> |
                <a asp-action="Index" class="text-dark">Zpět</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
