@model WeaponManager.Models.ColdWeapon
@using WeaponManager.Data.Enums

@{
    ViewBag.Title = "Nová chladná zbraň";
}

<h2>Nová chladná zbraň</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label">@Html.DisplayNameFor(_ => Model.Weight) (g)</label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BladeLength" class="control-label">@Html.DisplayNameFor(_ => Model.BladeLength) (cm)</label>
                <input asp-for="BladeLength" class="form-control" />
                <span asp-validation-for="BladeLength" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<ColdWeaponType>()">
                    <option selected="selected" value="">Vybrat</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">@Html.DisplayNameFor(_ => Model.Price) (Kč)</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Uložit" class="btn btn-dark" /> |
                <a asp-action="Index" class="text-dark">Zpět</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
